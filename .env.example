# Application
NODE_ENV=development
PORT=3000
APP_NAME=BillPaymentApp
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://billpay:password@localhost:5432/billpayment
DB_POOL_MAX=20
DB_POOL_MIN=5

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# TrueLayer (Open Banking)
TRUELAYER_CLIENT_ID=your-truelayer-client-id
TRUELAYER_CLIENT_SECRET=your-truelayer-client-secret
TRUELAYER_ENVIRONMENT=sandbox

# Stripe (Card Payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+441234567890

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@billpaymentapp.co.uk

# Onfido (KYC)
ONFIDO_API_TOKEN=your-onfido-api-token
ONFIDO_WEBHOOK_SECRET=your-onfido-webhook-secret

# Security
ENCRYPTION_KEY=your-32-byte-hex-encryption-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=
DATADOG_API_KEY=
LOG_LEVEL=info

# Feature Flags
ENABLE_CREDIT_REPORTING=false
ENABLE_OCR_SCANNING=false
ENABLE_CARD_PAYMENTS=true